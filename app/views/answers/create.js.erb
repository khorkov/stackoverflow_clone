<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('#answer-errors-common').html('<%= j message %>');
  <% end %>
<% else %>
  <% publish_to "/questions/#{@question.id}/answers" do %>
    $('#answers').append('<%= j render @answer %>');
  <% end %>
    $('#field_answer').val('');
    $(".nested-fields").hide('');
<% end %>

